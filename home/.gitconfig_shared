[core]
  editor = vim
  ignorecase = false
  longpaths = true

[alias]
  #add all
  aa = add . -A

  br = branch
  bd = branch -D
  bdp = branch -D @{-1}

  ci = commit
  #commit amend
  cia = commit --amend
  #commit amend all
  ciaa = commit --amend -a
  #commit amend force
  ciaf = commit --amend --no-edit 
  #commit amend all force
  ciaaf = commit --amend -a --no-edit

  clfd = clean -f -d
  #clean branches (delete branches that have already been merged on to master)
  clbr = !git branch --merged master | grep -v 'master$' | xargs git branch -d

  co = checkout
  cob = checkout -b
  com = co main
  #checkout patch-mode
  cop = checkout -p

  cp = cherry-pick
  cpc = !(git cp --continue)

  dc = diff --cached
  df = diff

  fo = fetch origin
  fop = fetch origin --prune

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

  lg = log -p
  ls = ls-files

  po = pull origin
  pop = pull origin --prune

  pushoh = push origin HEAD
  pushohf = !(git pushoh --force-with-lease)

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  rbim = rebase -i master

  rco = "!_() { git reset \"$@\" && git checkout \"$@\"; }; _"

  rl = reflog --date=local

  st = status

  sta = stash
  stal = stash list
  #stash list show dates
  stalsd = stash list --date=local
  stap = stash pop

  ta = "!f() { git tag -a -m $1 $1; }; f"
